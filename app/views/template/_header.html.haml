.header
  .header__inner
    .header__inner__top
      %h1.logo
        = link_to root_path do
          = image_tag 'furima.svg'
      .searchbox
        %form{action: '#', method: 'get'}
          %input{name: "utf8", type: "hidden", value: "✔︎"}
          %input{class: "searchbox--input", name: "key", placeholder: "お探しの商品は何ですか？"}
          %button{type: "submit", value: ""}
            .searchbox__icon
              = image_tag "icon-search.png"
    %nav.header__inner__nav
      %ul.list__left
        %li.list__left__category
          = link_to "#" do
            %span カテゴリー
        %li.list__left__brand
          = link_to "#" do
            %span ブランド
      %ul.list__right
        - if user_signed_in?
          %li.list__right__login
            = link_to user_path do
              %span マイページ
          %li.list__right__new
            = link_to destroy_user_session_path do
              %span ログアウト
        - else
          %li.list__right__login
            = link_to new_user_session_path do
              %span ログイン 
          %li.list__right__new
            = link_to new_user_registration_path do
              %span 新規会員登録
