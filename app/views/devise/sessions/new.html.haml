.main
  %header.login-page-header
    %h1
      =link_to "items" do
        .logo-block
          = image_tag 'logo.png', size: ''
  .login-page
    .login-page__register
      .login-page__register__text
        アカウントをお持ちでない方はこちら
      .login-page__register__btn
        = link_to "新規会員登録", root_path 
         
    .login-page__login
      .login-page__form.user-form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            .field-label
              = f.label :email
            .field-input
              = f.email_field :email, autofocus: true
            .field
              .field-label
                = f.label :password
                %i (英数字8文字以上)
              .field-input
                = f.password_field :password, autocomplete: "off"
            .actions
              = f.submit "ログイン", class: 'btn'
